<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.baccalaureat.controller.MultiplayerLobbyController"
            styleClass="lobby-container" stylesheets="@styles.css">
    
    <!-- Header -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="30" right="30" bottom="20" left="30"/>
            </padding>
            <HBox alignment="CENTER_LEFT">
                <Button text="â† Retour" styleClass="back-button" onAction="#handleBackToMenu"/>
                <Pane HBox.hgrow="ALWAYS"/>
            </HBox>
            <Label text="ðŸ‘¥ Mode Multijoueur" styleClass="lobby-title"/>
            <Label text="Ajoutez des joueurs et commencez la partie!" styleClass="lobby-subtitle"/>
        </VBox>
    </top>
    
    <!-- Players List -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="50" bottom="20" left="50"/>
            </padding>
            
            <!-- Add Player Section -->
            <HBox spacing="15" alignment="CENTER">
                <TextField fx:id="playerNameInput" promptText="Nom du joueur..." 
                           styleClass="player-input"/>
                <Button text="+ Ajouter" styleClass="add-player-button" 
                        onAction="#handleAddPlayer"/>
            </HBox>
            
            <!-- Players Grid -->
            <Label text="Joueurs" styleClass="section-title" style="-fx-font-size: 18px;"/>
            <FlowPane fx:id="playersPane" hgap="20" vgap="20" alignment="CENTER" 
                      prefWrapLength="600"/>
            
            <!-- Min players notice -->
            <Label fx:id="noticeLabel" text="Minimum 2 joueurs requis" 
                   style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>
        </VBox>
    </center>
    
    <!-- Bottom Actions -->
    <bottom>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="30" bottom="30" left="30"/>
            </padding>
            
            <!-- Difficulty Selection -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="DifficultÃ©:" styleClass="section-title"/>
                <ToggleButton fx:id="easyBtn" text="ðŸŒ± Facile" styleClass="difficulty-button" 
                             onAction="#handleDifficultyChange" userData="EASY"/>
                <ToggleButton fx:id="mediumBtn" text="âš¡ Normal" styleClass="difficulty-button" 
                             onAction="#handleDifficultyChange" userData="MEDIUM"/>
                <ToggleButton fx:id="hardBtn" text="ðŸ”¥ Difficile" styleClass="difficulty-button" 
                             onAction="#handleDifficultyChange" userData="HARD"/>
            </HBox>
            
            <Button fx:id="startGameButton" text="ðŸŽ® Commencer la Partie" 
                    styleClass="menu-button" prefWidth="300" onAction="#handleStartGame" 
                    disable="true"/>
        </VBox>
    </bottom>
</BorderPane>
